@model ShoppingCartVm

<form method="post">
    <div class="card shadow border-0">
        <div class="card-header text-light py-4">
            <div class="row">
                <div class="col-6">
                    <h5 class="h2 text-primary">Shopping Cart</h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
                @foreach (var item in Model.ShoppingCartList)
                {
                    <div class="col-md-10 offset-md-1 border-bottom pb-3">
                        <div class="row">
                            <div class="col-lg-1 d-none d-lg-block text-center py-2">
                                <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase text-secondary"><strong>@item.Product.Title</strong></h5>
                                <p><small>@Html.Raw(item.Product.Description)</small></p>
                            </div>
                            <div class="col-12 col-lg-5 text-center row align-items-center">
                                <div class="col-md-3 text-md-right">
                                    <h6 class="fw-semibold">
                                        @item.Price.ToString("c", NepaliFormat.GetFormat()) <span
                                            class="text-muted">&nbsp;x&nbsp;</span> @item.Count
                                    </h6>
                                </div>
                                <div class="col-md-6 col-lg-6 pt-2">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Plus" asp-route-cartId="@item.Id"
                                            class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a>
                                        <a asp-action="Minus" asp-route-cartId="@item.Id"
                                            class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-3 col-lg-1 text-right pt-2">
                                    <a asp-action="Remove" asp-route-cartId="@item.Id"
                                        class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer bg-white border-0">
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold">Total (NPR)</h5>
                                <h4 class="text-dark fw-bolder">@Model.OrderHeader.OrderTotal.ToString("c",
                                    NepaliFormat.GetFormat())</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row justify-content-center mt-4">
                    <div class="col-md-4">
                        <a asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
