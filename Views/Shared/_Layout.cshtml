<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hemp Haven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulkyWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" </head>
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.3/css/dataTables.dataTables.min.css">
    <link rel="icon" href="@Url.Content("~/images/agrologo.png")" />

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex justify-content-center align-items-center" asp-area=""
                    asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/images/agrologo.png")" alt="logo" width="40px">
                    Hemp Haven</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> Cart
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">Manage
                                Order</a>
                        </li>
                        @if (User.IsInRole(USER_ROLE.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <div class="nav-link dropdown-toggle" id="contentManagementDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Management
                                </div>
                                <ul class="dropdown-menu" aria-labelledby="contentManagementDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Category"
                                            asp-action="Index">Category</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Product"
                                            asp-action="Index">Product</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Company"
                                            asp-action="Index">Company</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create
                                            User</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>


    </header>
    <div class="container" style="min-height: 80vh;">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-secondary text-dark text-opacity-50 py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="h3">Contact Us</h5>
                    <ul class="list-unstyled">
                        <li>Gwarko</li>
                        <li>Lalitpur, Bagmati, 44600</li>
                        <li><a class="text-dark text-opacity-50" href="mailto:info@hemphaven.com">Email:
                                info@hemphaven.com</a></li>
                        <li>Phone: +977-9876543210</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="h3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-dark text-opacity-50" href="#">Home</a></li>
                        <li><a class="text-dark text-opacity-50" href="#">Shop</a></li>
                        <li><a class="text-dark text-opacity-50" href="#">About Us</a></li>
                        <li><a class="text-dark text-opacity-50" href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="h3">Follow Us</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-dark text-opacity-50" href="#"><i class="bi bi-facebook"></i> Facebook</a>
                        </li>
                        <li><a class="text-dark text-opacity-50" href="#"><i class="bi bi-twitter"></i> Twitter</a></li>
                        <li><a class="text-dark text-opacity-50" href="#"><i class="bi bi-instagram"></i> Instagram</a>
                        </li>
                        <li><a class="text-dark text-opacity-50" href="#"><i class="bi bi-linkedin"></i> LinkedIn</a>
                        </li>
                    </ul>
                </div>
            </div>
            <hr>
            <h3 class="text-center">LikheKeto Ko Kaam</h3>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/wtguroa35bo2ope52jbqcczto9be1skjg8hx4jiweopyj1ip/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script src="//cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
